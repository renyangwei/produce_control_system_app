<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.papermanagement.activity.OrderDetailActivity">

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMain"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="@string/order_detail"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_1"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <GridView
            android:id="@+id/grid_view_order_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:horizontalSpacing="1dp"
            android:numColumns="4"
            android:padding="1dp"
            android:verticalSpacing="1dp"
            android:scrollbarStyle="@null" />

        <TextView
            android:id="@+id/tv_sm2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/light_blue_bg"
            android:textSize="14sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="-1dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"/>
        <TextView
            android:id="@+id/tv_ddsm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/white_bg"
            android:textSize="14sp"
            android:gravity="start|center_vertical"
            android:layout_marginTop="-1dp"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>



</RelativeLayout>
